        //         || m.Type.Name == select_value)
        //     && (!show_only_with_stocks || m.Stocks.Sum(m => m.Stock) > 0)
        // )
        // .Skip((current_page - 1) * pageSize)
        // .Take(pageSize)
        // .ToArray();
        // InvokeAsync(StateHasChanged);
        items = stockIssues.ToArray();
    }

    void ToggleAdding()
    {
        is_adding = !is_adding;
    }
}