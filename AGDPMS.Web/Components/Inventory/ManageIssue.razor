@page "/inventory/issue"
@rendermode InteractiveServer

@using AGDPMS.Shared.Models
@using AGDPMS.Shared.Services
@using System.ComponentModel.DataAnnotations

@* @attribute [Authorize(Roles = "Admin")] *@

@inject IInventoryService inventoryService

<PageTitle>Kho</PageTitle>

<h3>Quản lý xuất kho</h3>

<div class="card mb-3">
    <h5 class="card-header">Bộ lọc tìm kiếm</h5>
    <div class="m-3">
        <div class="row mb-3">
            <label class="col-form-label col-2"><span class="align-middle">Mã hoặc tên</span></label>
            <div class="col-10">
                <input type="search"
                       class="form-row form-control col-10"
                       placeholder="Tìm kiếm theo mã hoặc tên"
                       value="@search_term" @oninput="Search" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-form-label col-2">Loại vật tư</label>
            <div class="col-10">
                <select class="form-control form-row" @oninput="Select">
                    <option>Toàn bộ</option>
                    @for (int i = 0; i < material_types.Count(); i++)
                    {
                        <option>@material_types.ElementAt(i).Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-check">
            <input class="form-check-input form-row"
                   type="checkbox"
                   checked="@show_only_with_stocks"
                   @oninput="OnSelectCheckBox" />
            <label class="form-check-label">Chỉ hiển thị vật tư còn trong kho</label>
        </div>
    </div>
</div>


<div class="d-flex justify-content-between align-items-center mb-4">
    @* <h4 class="fw-bold py-3 mb-0"><span class="text-muted fw-light">Quản lý /</span> Kho </h4> *@
    <div>
        <button class="btn btn-primary me-2">
            <i class="me-1"></i> Thêm vật tư mới
        </button>
        <button class="btn btn-primary">
            <i class="me-1">Sửa thông tin vật tư </i>
        </button>
    </div>
</div>

<div class="card">
    <h5 class="card-header">
        Danh sách vật tư (Số lượng: @(items.Count()))
    </h5>
    <div class="table-responsive text-nowrap">
        @if (is_loading)
        {
            <div class="p-3">Đang tải dữ liệu...</div>
        }
        @if (materials == null || !materials.Any())
        {
            <div class="p-3">Không tìm thấy vật tư nào.</div>
        }
        @if (load_error)
        {
            <div class="p-3">Lỗi tải dữ liệu</div>
            <div class="p-3">@m_res.ErrorMessage</div>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã</th>
                        <th>Tên</th>
                        <th>Loại vật tư</th>
                        <th>Kích thước</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (Material m in items)
                    {
                        <tr>
                            <td rowspan="@(@m.Stocks.Count() + 1)">@m.Id</td>
                            <td rowspan="@(@m.Stocks.Count() + 1)">@m.Name</td>
                            <td rowspan="@(@m.Stocks.Count() + 1)">@m.Type.Name</td>
                        </tr>
                        @foreach (MaterialStock ms in m.Stocks)
                        {
                            <tr>
                                <td>@ms.Length</td>
                                <td>@ms.Stock</td>
                                <td>@ms.BasePrice</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<hr />

@code {
    private GetMaterialResult m_res = null;
    private GetMaterialTypeResult mt_res = null;
    private bool load_error = false;
    private bool is_loading = true;
    //filter
    private string search_term = string.Empty;
    private string select_value = string.Empty;
    private bool show_only_with_stocks = false;

    private IEnumerable<Material> materials = new List<Material> { };
    private IEnumerable<MaterialType> material_types = new List<MaterialType> { };
    private Material[] items = new Material[] { };
    private System.Threading.Timer? searchTimer;
    private int current_page = 1;
    private int pageSize = Int32.MaxValue;

    protected override async Task OnInitializedAsync()
    {
        is_loading = true;

        mt_res = await inventoryService.GetMaterialType();
        if (mt_res.Success)
        {
            material_types = mt_res.MaterialTypes;
            // select_value =
        }
        m_res = await inventoryService.GetMaterial();
        if (m_res.Success)
        {
            materials = m_res.Materials;
            items = materials.ToArray();
        }
        else
        {
            load_error = true;
        }
        PerformSearch(null);
        is_loading = false;
        StateHasChanged();
    }

    private void Search(ChangeEventArgs e)
    {
        search_term = e.Value?.ToString() ?? string.Empty;
        searchTimer?.Dispose();
        searchTimer = new System.Threading.Timer(PerformSearch, null, 100, Timeout.Infinite);
    }

    private void Select(ChangeEventArgs e)
    {
        select_value = e.Value?.ToString();
        searchTimer?.Dispose();
        searchTimer = new System.Threading.Timer(PerformSearch, null, 100, Timeout.Infinite);
    }

    private void OnSelectCheckBox(ChangeEventArgs e)
    {
        show_only_with_stocks = (Boolean)e.Value;
        searchTimer?.Dispose();
        searchTimer = new System.Threading.Timer(PerformSearch, null, 100, Timeout.Infinite);
    }

    void PerformSearch(object? state)
    {
        items = materials
        .Where(m =>
            (string.IsNullOrWhiteSpace(search_term)
                || m.Name.Contains(search_term, StringComparison.OrdinalIgnoreCase)
                || m.Id.Contains(search_term, StringComparison.OrdinalIgnoreCase))
            && (string.IsNullOrEmpty(select_value)
                || select_value.Equals("Toàn bộ")
                || m.Type.Name == select_value)
            && (!show_only_with_stocks || m.Stocks.Sum(m => m.Stock) > 0)
        )
        .Skip((current_page - 1) * pageSize)
        .Take(pageSize)
        .ToArray();
        InvokeAsync(StateHasChanged);
    }
}