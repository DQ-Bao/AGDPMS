<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AGDPMS.Pages.LoginPage"
             x:DataType="local:LoginViewModel"
             xmlns:local="clr-namespace:AGDPMS.Pages"
             Title="Login">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Phone Number" />
        <Entry Text="{Binding PhoneNumber}" Keyboard="Telephone" />
        <Label Text="Password" />
        <Entry Text="{Binding Password}" IsPassword="True" />
        <Label Text="{Binding Message}" TextColor="Red" IsVisible="{Binding HasMessage}" />
        <Button Text="Login" Command="{Binding LoginCommand}" />
        <Button Text="Forgot password?" Command="{Binding ForgotPasswordCommand}" />
    </VerticalStackLayout>
</ContentPage>

