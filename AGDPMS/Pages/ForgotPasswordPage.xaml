<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AGDPMS.Pages.ForgotPasswordPage"
             x:DataType="local:ForgotPasswordViewModel"
             xmlns:local="clr-namespace:AGDPMS.Pages"
             Title="Forgot Password">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Forgot your password?" FontSize="24" FontAttributes="Bold" />
        <Label Text="Enter your phone number." />
        
        <Label Text="Phone Number" />
        <Entry Text="{Binding PhoneNumber}" Keyboard="Telephone" />
        
        <Label Text="{Binding Message}" TextColor="Red" IsVisible="{Binding HasMessage}" />
        
        <Button Text="Send SMS" Command="{Binding SendSmsCommand}" />
        <Button Text="Back to Login" Command="{Binding BackToLoginCommand}" />
    </VerticalStackLayout>
</ContentPage>
