<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AGDPMS.Pages.NeedChangePasswordPage"
             x:DataType="local:NeedChangePasswordViewModel"
             xmlns:local="clr-namespace:AGDPMS.Pages"
             Title="Change Password">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Change Password" FontSize="24" FontAttributes="Bold" />
        <Label Text="You need to change your password." />
        
        <Label Text="New Password" />
        <Entry Text="{Binding NewPassword}" IsPassword="True" />
        
        <Label Text="{Binding Message}" TextColor="Red" IsVisible="{Binding HasMessage}" />
        
        <Button Text="Change Password" Command="{Binding ChangePasswordCommand}" />
    </VerticalStackLayout>
</ContentPage>
