<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AGDPMS.Pages"
             x:Class="AGDPMS.Pages.AddAccountPage"
             x:DataType="local:AddAccountViewModel"
             Title="Add Account">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Add Account" FontSize="24" FontAttributes="Bold" />
        
        <Label Text="Phone Number" />
        <Entry Text="{Binding PhoneNumber}" Keyboard="Telephone" />
        
        <Label Text="Full Name" />
        <Entry Text="{Binding FullName}" />
        
        <Label Text="Role" />
        <Picker ItemsSource="{Binding Roles}"
                SelectedItem="{Binding SelectedRole}"
                ItemDisplayBinding="{Binding Name}" />
        
        <Label Text="{Binding Message}" TextColor="Red" IsVisible="{Binding HasMessage}" />
        
        <Button Text="Create Account" Command="{Binding CreateAccountCommand}" />
        <Button Text="Cancel" Command="{Binding CancelCommand}" />
    </VerticalStackLayout>
</ContentPage>
