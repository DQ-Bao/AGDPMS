<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AGDPMS.Pages.ResetPasswordPage"
             x:DataType="local:ResetPasswordViewModel"
             xmlns:local="clr-namespace:AGDPMS.Pages"
             Title="Reset Password">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Reset Password" FontSize="24" FontAttributes="Bold" />
        <Label Text="Reset your password." />
        
        <Label Text="New Password" />
        <Entry Text="{Binding NewPassword}" IsPassword="True" />
        
        <Label Text="Confirm Password" />
        <Entry Text="{Binding ConfirmPassword}" IsPassword="True" />
        
        <Label Text="{Binding Message}" TextColor="Red" IsVisible="{Binding HasMessage}" />
        
        <Button Text="Submit" Command="{Binding SubmitCommand}" />
        <Button Text="Back" Command="{Binding BackCommand}" />
    </VerticalStackLayout>
</ContentPage>
